        {
            Random num = new Random();
            randlnum1 = num.Next(1, 12);
            randrnum1 = num.Next(1, 12);
            view1 = "hidden"; //makes the Generate Question button disappear
            view2 = "visible"; //Makes the check answer button appear
        }



        private void Check1()
        {
            int sum1 = randlnum1 + randrnum1;
            if (guess1 == sum1)
            {
                answered1++;
                answeredCorrect1++;
                message1 = "Correct! You answered " + answeredCorrect1 + " correctly out of " + answered1 + " in the Addition Game.";
                guess1 = 0;
            }
            else
            {
                answered1++;
                message1 = "Wrong! You answered " + answeredCorrect1 + " correctly out of " + answered1 + " in the Addition Game.";
                guess1 = 0;
            }
